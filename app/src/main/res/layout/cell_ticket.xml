<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ticketIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
       android:layout_marginTop="@dimen/margin_size_10"
        android:layout_marginBottom="@dimen/margin_size_10"
        android:layout_marginStart="@dimen/margin_size_24"
        android:background="@drawable/icon_ticket"
        android:backgroundTint="@color/printer_color_dark_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/ticketDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_tickets"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/printer_color_dark_blue"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/ticketIcon"
        app:layout_constraintTop_toTopOf="@id/ticketIcon"
        app:layout_constraintBottom_toBottomOf="@id/ticketIcon"/>

    <TextView
        android:id="@+id/ticketTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_date"
        app:layout_constraintStart_toStartOf="@id/ticketDescription"
        app:layout_constraintTop_toBottomOf="@id/ticketDescription"
        app:layout_constraintBottom_toBottomOf="@id/ticketIcon"/>

</androidx.constraintlayout.widget.ConstraintLayout>