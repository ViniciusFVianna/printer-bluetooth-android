<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/deviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_size_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/menu_devices"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/printer_color_light_blue"
        android:textSize="@dimen/text_size_14"/>
    <TextView
        android:id="@+id/deviceAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/margin_size_10"
        app:layout_constraintStart_toStartOf="@id/deviceName"
        app:layout_constraintTop_toBottomOf="@id/deviceName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/menu_devices"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/printer_color_input_blue"
        android:textSize="@dimen/text_size_12"/>

</androidx.constraintlayout.widget.ConstraintLayout>