<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/printer_color_dark_gold</item>
        <item name="colorPrimaryDark">@color/printer_color_dark_blue</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- Base application theme. -->
    <style name="Apptheme" parent="BaseAppTheme"/>
    <style name="Apptheme.NavDrawer" parent="BaseAppTheme"/>

    <style name="Apptheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Apptheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Apptheme.FullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--Estilos do app-->
    <style name="ButtonTextStyle">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <!--Checkbox styles-->
    <style name="CheckBoxStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/printer_color_dark_blue</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Input style -->
    <style name="InputTextStyle">
        <item name="android:textColor">@color/printer_color_white</item>
        <item name="android:textColorHint">@color/printer_color_input_white</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textAlignment">center</item>
<!--        <item name="android:background">@drawable/input_light_background</item>-->
    </style>

    <!--ButtonGradient style-->
    <style name="ButtonGradientStyle">
        <item name="android:textColor">@color/printer_color_white</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowColor">@color/printer_color_black</item>
<!--        <item name="android:background">@drawable/button_gradient_background</item>-->
    </style>

    <!--BotomNavigationView style-->
    <style name="BottomNavigationviewStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">2sp</item>
    </style>

    <!--Spinner styles-->
    <style name="SpinnerInputTitleStyle"  parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColorHint">@color/printer_color_dark_blue</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">@color/printer_color_dark_blue</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--Alert styles-->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/printer_color_dark_blue</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/printer_color_dark_blue</item>
        <!-- Used for the background -->
        <item name="android:background">@android:color/white</item>
    </style>

</resources>
